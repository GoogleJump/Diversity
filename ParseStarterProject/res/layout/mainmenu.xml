<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/background"
    android:weightSum="5.0">
    <View 
        android:layout_width="1dp"
        android:layout_height="30dp"/>
   
     <TextView
        style="@style/BiggerFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
     
     <Button android:id="@+id/start_continue_button_mm"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/start_continue_textbutton"
        android:layout_weight="0.5"/>
     
     <Button
         android:id="@+id/trophies_button_mm"
         android:layout_width="200dp"
         android:layout_height="0dp"
         android:layout_gravity="center_horizontal"
         android:background="@drawable/trophy_shelf_textbutton" 
         android:layout_weight="0.5"/>
     
     <Button
         android:id="@+id/photos_button_mm"
         android:layout_width="200dp"
         android:layout_height="0dp"
         android:layout_gravity="center_horizontal"
         android:background="@drawable/photo_album_textbutton"
         android:layout_weight="0.5"/>
     
     <Button
         android:id="@+id/inventory_button_mm"
         android:layout_width="200dp"
         android:layout_height="0dp"
         android:layout_gravity="center_horizontal"
         android:background="@drawable/inventory_textbutton"
         android:layout_weight="0.5"/>

     <Button android:id="@+id/settings_button_mm"
         android:layout_width="200dp"
         android:layout_height="0dp"
         android:background="@drawable/settings_textbutton"
         android:layout_gravity="center_horizontal"
         android:layout_weight="0.5"/>
     
     

</LinearLayout>