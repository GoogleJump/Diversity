<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:gravity="fill_vertical"
    android:background="@drawable/plain_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/main_menu_button_set"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/home_button_custom" />

        <TextView
            style="@style/GameFont.Big"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="@string/help" />
    </LinearLayout>

    <TextView
        style="@style/GameFont"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.2"
        android:gravity="center"
        android:text="@string/help_steps"
        android:textSize="12sp" />

    <ImageButton
        android:id="@+id/map_help"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:padding="10sp"
        android:layout_gravity="fill_vertical"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/map_help" />

</LinearLayout>