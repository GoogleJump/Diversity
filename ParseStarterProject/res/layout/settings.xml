<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/background">
    
    <Button android:id="@+id/main_menu_button_set"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/home_button_custom"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
        style="@style/GameFont.Big"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/settings" 
	    android:layout_gravity="center"/>
          
     <Button android:id="@+id/about_button_mm"
         android:layout_width="200dp"
         android:layout_height="80dp"
         android:background="@drawable/about_textbutton_custom"
         android:layout_marginTop="20sp"
         android:layout_gravity="center_horizontal"/>
     
     <Button android:id="@+id/help_button"
         android:layout_width="200dp"
         android:layout_height="80dp"
         android:background="@drawable/about_textbutton_custom"
         android:text="HELP"
         android:layout_gravity="center_horizontal"/>
     
     <Button android:id="@+id/restart_button_set"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:background="@drawable/restart_textbutton_custom"
        android:layout_gravity="center_horizontal"/>
       
     <Button android:id="@+id/logout_button_set"
         android:layout_width="200dp"
         android:layout_height="80dp"
         android:background="@drawable/logout_textbutton_custom"
         android:layout_gravity="center_horizontal"/>
    </LinearLayout>
     
     
</LinearLayout>